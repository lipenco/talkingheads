<div id="edit-conference">
      <p>
       <label class="">Title</label>
       <input type="text" name="title" value="<%= @title %>" />
     </p>
      <p>
       <label class="">Video url (Youtube or Vimeo)</label>
       <input type="text" name="video_url" value="<%= @video_url %>" />
     </p>
     <p>
       <label class="">Slides embeded code (Speakerdeck or Slideshare)</label>
       <input type="text" name="slides_url" value="<%= @slides_url %>" />
     </p>
     <p>
       <label class="">Speaker name</label>
       <input type="text" name="speaker" value="<%= @speaker %>" />
     </p>
     <p>
       <label class="">Description</label>
       <textarea name="description" value="<%= @description %>"></textarea>
     </p>

     <p>
       <label class="talk-delete"><span class="glyphicon glyphicon-remove"></span> Delete this talk</label>
      </p>

</div>
